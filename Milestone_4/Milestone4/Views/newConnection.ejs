<!DOCTYPE html>
<html lang="en">
<head>
<title>NewConnection</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="./../styles/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<%- include('./partials/header.ejs'); %>
<h1 id="stay_fit">Connection Form</h1>
<div class="container2">
<!--<form action="http://localhost:8000/index" method="post">-->
<form action="/new_connection" method="post">
  <label for="topic">Topic:  </label>
	<input type="text" id="topic" name="topic" placeholder="topic"><br><br>
	
	<label for="name">Name: </label>
	<input type="text" id="name" name="name" placeholder="Name"><br><br>
	
	<label for="details">Details</label>
	<input type="text" id="details" name="details" placeholder="description"><br><br>
  
	<label for="where">Where: </label>
	<input type="text" id="where" name="where" placeholder="Location"><br><br>
  
	<label for="date">Date:</label>
	<input type="date" id="date" name="date" ><br><br>
	
	<label for="host">Host: </label>
	<input type="text" id="host" name="host" placeholder="Host"><br><br>
  	
	<label for="time">Time:</label>
	<input type="text" id="time" name="time" placeholder="Time start - end am/pm"><br><br>
  
	<input type="submit" id="submit" value="Submit">
</form>
</div>
<%- include('./partials/footer.ejs'); %>
</body>
</html>
